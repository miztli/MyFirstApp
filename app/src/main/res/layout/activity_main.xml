<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miztli.myfirstapp.MainActivity">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="138dp"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/welcome_message"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextHelloWorld"
        android:layout_marginLeft="121dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextHelloWorld"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/text_name"
        app:layout_constraintLeft_toRightOf="@+id/buttonHelloWorld"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/buttonHelloWorld"
        android:layout_width="97dp"
        android:layout_height="51dp"
        android:onClick="sendMessage"
        android:text="@string/click_me"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/buttonAnotherActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startAnotherActivity"
        android:text="@string/new_activity"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_welcome" />

    <EditText
        android:id="@+id/editTextAnotherActivity"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/buttonAnotherActivity"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_welcome" />

</android.support.constraint.ConstraintLayout>
